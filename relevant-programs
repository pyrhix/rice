for installation
useradd -m -g wheel name
passwd name
pacman -S nano base-devel git
nano /etc/sudoers
  
  then, once out of root

pacman -S xorg-server xorg-xinit
pacman -S i3-gaps i3status rxvt-unicode dmenu noto-fonts alsa-utils networkmanager
sudo systemctl enable NetworkManager
pacman -S noto-fonts-cjk noto-fonts-emoji noto-fonts
yay -s tamzen-font
yay -s ungoogled-chromium
startx

